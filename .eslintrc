{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "airbnb",
    "rules": {
      "indent": [2, tab, {
        "SwitchCase": 1
      }],
      "semi": [2, "never"],
      "comma-dangle": [2, "never"],
			"camelcase": [2, {"properties": "never"}],
			"react/jsx-indent": [2, 'tab'],
			"react/jsx-indent-props": [2, 'tab'],
			"react/jsx-no-bind": [2, {
			  "allowBind": true
			}],
			"react/prefer-stateless-function": 0
    },
    "globals": {
      "React": true
    },
    "plugins": [
      "react"
    ],
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
}
